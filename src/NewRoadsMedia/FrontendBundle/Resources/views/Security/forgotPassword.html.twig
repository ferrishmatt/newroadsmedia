{% extends "::base.html.twig" %}

{% block title %}{{ parameter('site_title') }} -- Password{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('css/login.css') }}"/>
    <style type="text/css">
        .form-errors {
            padding: 15px 0;
        }

        #content .general-login h1 {
            margin-bottom: 15px;
        }
    </style>
{% endblock %}

{% block content %}
    <div class="general-login">
        <h1>Forgot Password</h1>
        {% if form.vars.errors %}
            <div class="form-errors">
                {{ form_errors(form) }}
            </div>
        {% endif %}
        {{ form_start(form) }}
        <p>
            Enter the email address connected to your {{ parameter('site_title') }} account and we will email you a link to reset your password.
        </p>
        {{ form_widget(form.email, {'attr': {'placeholder': 'Your Email Address'}}) }}
        {{ form_widget(form.submit, {'attr': {'class': 'button-success'}}) }}
        <div class="forgot-password">
            <a href="{{ path('Login') }}">&lt; Go to Sign In</a>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock content %}