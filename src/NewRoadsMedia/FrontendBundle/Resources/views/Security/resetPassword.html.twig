{% extends "::base.html.twig" %}

{% block title %}{{ parameter('site_title') }} -- Password{% endblock %}

{% block content %}
    <div class="line">
        <div class="unit size3of4">
            <div class="box">

                <h1 class="green">Reset Password</h1>

                {{ form_errors(form) }}
                {{ form_start(form) }}
                    <input type="hidden" name="cid" value="ResetPassword">

                    <table>
                        <tr>
                            <td>{{ form_label(form.email) }}</td>
                            <td>{{ form_widget(form.email) }}</td>
                        </tr>
                        <tr>
                            <td>{{ form_label(form.password.first) }}</td>
                            <td>{{ form_widget(form.password.first) }}</td>
                        </tr>
                        <tr>
                            <td>{{ form_label(form.password.second) }}</td>
                            <td>{{ form_widget(form.password.second) }}</td>
                        </tr>

                        <tr><td><input type="submit" value="Reset Password" class="button"></td></tr>
                    </table>
                {{ form_end(form) }}

                <p>&nbsp;</p>

            </div>
        </div>

    </div>
{% endblock %}