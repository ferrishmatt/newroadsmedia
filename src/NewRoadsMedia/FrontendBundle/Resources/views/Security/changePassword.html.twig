{% extends "::base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <style type="text/css">
        #user-change-info {
            margin: 0 auto;
        }
        #user-change-info td {
            padding: 2px 15px;
        }
        #user-change-info label {
            font-size: 13px;
            font-weight: bold;
        }

        #user-change-info input {
            margin-bottom: 10px;
        }
        .submitIt {
            width: auto;
            padding: 4px 15px;
            font-weight: bold;
            cursor: pointer;
        }
        #content .inner-content ul {
            float: none;
            color: #900;
            font-weight: bold;
            text-align: center;
        }

        #content .inner-content ul li {
            list-style-type: none;
        }

        #content input {
            display: inline-block;
            padding: 6px 12px;
            font-size: 14px;
            line-height: 1.42857143;
            color: #555;
            background-color: #fff;
            background-image: none;
            border: 1px solid #ccc;
            border-radius: 4px;
            -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
            box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
            -webkit-transition: border-color ease-in-out .15s,-webkit-box-shadow ease-in-out .15s;
            -o-transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
            transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
            width: 230px;
        }
    </style>
{% endblock %}

{% block content %}
<div class="inner-content">
    <h1>Change Account Information</h1>
    <p>Complete the fields below to update your login and account information. When you’re done, click on the “Submit Changes” button.</p>
    {{ form_start(form) }}
    {{ form_errors(form) }}
    <table id="user-change-info">
        <tr>
            <td>
                {{ form_label(form.currentEmail) }}<br/>
                {{ form_widget(form.currentEmail) }}<br/>

                {{ form_label(form.currentPassword) }}<br/>
                {{ form_widget(form.currentPassword) }}<br/>
            </td>
            <td>
                {{ form_label(form.newEmail) }}<br/>
                {{ form_widget(form.newEmail) }}<br/>

                {{ form_label(form.newPassword.first) }}<br/>
                {{ form_widget(form.newPassword.first) }}<br/>

                {{ form_label(form.newPassword.second) }}<br/>
                {{ form_widget(form.newPassword.second) }}<br/>
            </td>
            <td>
                {{ form_label(form.newName) }}<br/>
                {{ form_widget(form.newName) }}<br/>
                {% if form.newCompany is defined %}
                    {{ form_label(form.newCompany) }}<br/>
                    {{ form_widget(form.newCompany) }}<br/>
                {% endif %}
            </td>
        </tr>
    </table>
    <div style="text-align: center;margin-top:15px;">
        <button type="submit" class="submitIt">Submit Changes</button>
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}
