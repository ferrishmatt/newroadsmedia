<div class="result">
    <div class="title">
        <a href="{{ job.url }}" target="_blank">{{ job.name }}</a>
    </div>
    <div class="company">
        {% if job.hiring_company %}{{ job.hiring_company.name }}{% else %}Not Specified{% endif %}
    </div>
    <div class="details">
        {% if job %}
            <span class="new-job">New</span>
        {% endif %}
        <ul>
            {% if job.location %}
                <li class="location">
                    {{job.location}}
                </li>
            {% endif %}
            {% if job.category %}
                <li class="status">
                    {{ job.category }}
                </li>
            {% endif %}
            <li class="posted">
                Posted: <span class="date">{{ job.posted_time_friendly }}</span>
            </li>
        </ul>
    </div>
    <hr/>
</div>